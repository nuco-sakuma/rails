<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @nba_player) do |f| %>
      <%= f.label :sum_score %>
      <%= f.select :sum_score, options_for_select((1..100).to_a), {}, { class: 'form-control' } %>
      <%= f.submit "Rate", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= @nba_player.sum_score %></h2>
  </div>
</div>
